<% include partials/header %>

<div class = "container">
<header class="jumbotron">
<h2>Welcome to Yelp Camp</h2>
<p> View our hand-selected campsites</p>
<p>
    <a class="btn btn-dark" href="/campgrounds/new">Add new campground</a>
</p>
</header>

<div class="row text-center">
    <% for(var i=0; i<campgrounds.length; i++){%>
        <div class="col-md-4 col-sm-6">
            <div class="img-thumbnail">
                <img src="<%= campgrounds[i].campgroundImage %>">
                <div class="caption">
                        <p> <%= campgrounds[i].campgroundName %> </p>
			            <a href="/campgrounds/<%= campgrounds[i]._id %>"> Show More</a>
                </div>
            </div>
        </div>
    <% } %>
</div>

</div>
<% include partials/footer %>
